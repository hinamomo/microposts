<h1>Edit Profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>

      <label for="message_name" class="control-label col-md-2">eメール:</label>
      <%=f.text_field :email, class: 'form-control' %>

      <label for="message_name" class="control-label col-md-2">自己紹介:</label>
      <%=f.text_field :introduction, class: 'form-control' %>

      <label for="message_name" class="control-label col-md-2">住所(地域):</label>
      <%=f.text_field :area, class: 'form-control' %>

      <label for="message_name" class="control-label col-md-2">HP:</label>
      <%=f.password_field :homepage, class: 'form-control' %>

      <label for="message_name" class="control-label col-md-2">誕生日:</label>
      <%=f.password_field :birthday, class: 'form-control' %>

      <%=f.submit "Edit my profile" , class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
