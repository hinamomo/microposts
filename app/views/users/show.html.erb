<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <span><%= link_to pluralize(@user.following_users.count, "followings"), followings_user_path(@user) %></span>
      <span><%= link_to pluralize(@user.follower_users.count, "followers"), followers_user_path(@user) %></span>
    </section>
    <%= render 'profile' %>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <%= page_entries_info @microposts %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>

